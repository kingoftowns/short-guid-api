    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "src/flask-app/api/routes",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",
            },
            "envFile": "${workspaceFolder}/.env.fake",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8080"
            ]
        }
    ]
}